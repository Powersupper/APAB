<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
{{# if login }}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Add Product</h1>
        <form action="/AddProduct" method="post">
            <input type="hidden" name="_id" value="{{products._id}}">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="title">Product name</label>
                        <input type="text" id="title" class="form-control" name="title" value="{{products.title}}" >
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="description">Enter product description</label>
                        <input type="text" id="description" class="form-control" name="description" value="{{products.description}}" >
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="imagePath">Product image URL</label>
                        <input type="text" id="imagePath" class="form-control" name="imagePath" value="{{products.imagePath}}" >
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="price">Set the price</label>
                        <input type="number" id="price" class="form-control" name="price" value="{{products.price}}" >
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>

<br><br><br>
{{/if}}


{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <!--Update is not completed-->
                            <!--<a href="/UpdateProduct/{{this._id}}" class="btn btn-danger pull-right" role="button">Update</a>-->
                            <a href="/DeleteProduct/{{this._id}}" class="btn btn-danger pull-right" role="button">delete</a>

                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}